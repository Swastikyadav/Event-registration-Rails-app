<section class="user">
  <h1><%= @user.name %></h1>
  <h4><%= mail_to(@user.email) %></h4>
  <% if current_user?(@user) %>
    <p><%= link_to "Edit Profile", edit_user_path(@user) %><p>
    <p><%= link_to "Delete Profile", user_path(@user), method: :delete, data: { confirm: "Are you sure?" } %><p>
  <% end %>

  <% @registrations.each do |r| %>
    <div>
      <%= link_to image_tag(r.event.image_file_name), r.event, class: "image" %>
    </div>
    <%= link_to r.event.name, r.event %>
  <% end %>
</section>